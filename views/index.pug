extends layout

block content
  main(id="index")
    h1= title
    ul
      - for (let i = 0; i<messages.length; i++) 
        li
          div(class="message")
            p(class="text")= messages[i].text
            p(class="details")= `${messages[i].user}, ${messages[i].added}`
    a(href="./new") 
      button(id="post-message") Post a message